{
    "name": "diacronia",
    "type": "dark",

    "colors": {
        "activityBar.background": "#1e1c1d",
        "activityBar.foreground": "#bababa",

        "sideBar.background": "#211f20",
        "sideBar.foreground": "#f9f9f9",

        "editor.background": "#1e1c1d",
        "editor.foreground": "#ededed",
        "editor.lineHighlightBackground": "#ffffff02",
        "editor.lineHighlightBorder": "#ffffff03",
        "editor.selectionBackground": "#ffffff1f",

        "editorSuggestWidget.selectedBackground": "#ffffff2f",
        "editorSuggestWidget.highlightForeground": "#c15353",
        
        "editorLineNumber.foreground": "#bababa",
        
        "editorGroupHeader.tabsBackground": "#211f20",
        "editorGroupHeader.tabsBorder": "#1e1c1d",
        
        "tab.activeBackground": "#1e1c1d",
        "tab.activeBorder": "#bababa",
        "tab.inactiveBorder": "#bababa",
        "tab.inactiveBackground": "#211f20",
        "tab.inactiveForeground": "#bababa",
        
        "statusBar.background": "#1e1c1d",
        "statusBar.foreground": "#bababa",
        
        "titleBar.activeBackground": "#1e1c1d"
    },

    "tokenColors": [
        {
            "name": "Rose (string)",
            "scope": [
                "string",
                "support.constant.property-value.css"
            ],
            "settings": {
                "foreground": "#FFCF99",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Bold and grey (comments)",
            "scope": [
                "comment"
            ],          
            "settings": {
                "foreground": "#43494C",
                "fontStyle": "bold italic"
            }
        },
        {
            "name": "Orange (Operators and new)",
            "scope": [
                "keyword.operator",
                "keyword.operator.new.js",
                "keyword.operator.js",
                "entity.other.attribute-name.html",
                "support"
            ],
            "settings": {
                "foreground": "#FF9999" 
            }
        },
        {
            "name": "Orange (var e const)",
            "scope": [
                "storage.type",
                "constant.numeric",
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#F9C0AE"
            }
        },
        {
            "name": "Violet (this e keyword)",
            "scope": [
                "keyword.control",
                "variable.language",
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#bf5477",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Dark red",
            "scope": [
                "entity.name.class",
                "entity.name.struct",
                "entity.name.enum",
                "entity.name.union",
                "entity.name.trait",
                "entity.name.interface",
                "entity.name.type",
                "entity.name.tag"
            ],
            "settings": {
                "foreground": "#c15353"
            }
        },
        {
            "name": "Brown",
            "scope": [
                "variable.parameter",
                "entity.name.tag.html"
            ],
            "settings": {
                "foreground": "#98664E",
                "fontStyle": "bold italic"
            }
        }
    ]
    
}