{
    "name": "diacronia",
    "type": "dark",

    "colors": {
        "activityBar.background": "#1e1c1d", 
        "activityBar.foreground": "#bababa", 
        "sideBar.background": "#211f20", 
        "sideBar.foreground": "#f9f9f9",
        "editor.background": "#1e1c1d", /*"#292a2b",*/
        "editor.foreground": "#ededed",
        "editorLineNumber.foreground": "#bababa",
        "editorGroupHeader.tabsBackground": "#211f20",
        "editorGroupHeader.tabsBorder": "#1e1c1d",
        "tab.activeBackground": "#1e1c1d",
        "tab.activeBorder": "#bababa",
        "tab.inactiveBorder": "#bababa",
        "tab.inactiveBackground": "#211f20",
        "tab.inactiveForeground": "#bababa",
        "statusBar.background": "#1e1c1d", /* #D8CBC7 */
        "statusBar.foreground": "#bababa",
        "titleBar.activeBackground": "#1e1c1d",
        "editor.lineHighlightBackground": "#ffffff02",
        "editor.lineHighlightBorder": "#ffffff03",
        "editor.selectedBackground": "#ffffff03",
        "editor.selectionBackground": "#ffffff0f",
        "editorSuggestWidget.selectedBackground": "#ffffff0f",
        "editorSuggestWidget.highlightForeground": "#c15353"
    },

    "tokenColors": [
        {
            "name": "Strings",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#FF9999",
                "fontStyle": "italic"
            }
        },       
        {
            "name": "Comments",
            "scope": [
                "comment"
            ],          
            "settings": {
                "foreground": "#43494C",
                "fontStyle": "bold italic"
            }
        },
        {
            "name": "Keyword Operator",
            "scope": [
                "keyword.operator",
                "keyword.operator.new.js",
                "keyword.operator.js"
            ],
            "settings": {
                "foreground": "#FFCF99" /*"#93FFF7"*/
            }
        },
        {
            "name": "Keyword Control",
            "scope": [
                "keyword.control"
            ],
            "settings": {
                "foreground": "#bf5477"
            }
        },
        {
            "name": "Variable Language Operators",
            "scope": [
                "variable.language"
            ],
            "settings": {
                "foreground": "#bf5477", // bf7457
                "fontStyle": "italic"
            }
        },
        {
            "name": "Storage Type && Constant Numeric",
            "scope": [
                "storage.type",
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#bb8a8a"
            }
        },
        {
            "name": "Support",
            "scope": [
                "support"
            ],
            "settings": {
                "foreground": "#FFCF99"
            }
        },
        {
            "name": "Entity",
            "scope": [
                "entity.name.class",
                "entity.name.struct",
                "entity.name.enum",
                "entity.name.union",
                "entity.name.trait",
                "entity.name.interface",
                "entity.name.type"
            ],
            "settings": {
                "foreground": "#c15353"
            }
        }
    ]
    
}